# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <youremail@domain.com>
pkgname=jkoonts-myq
pkgver=1
pkgrel=1
pkgdesc="myq garage autoopener"
arch=(any)
url="https://github.com/helloimalemur/MyQ_Java"
license=('GPL')
depends=(wget git python3 python-pip jdk-openjdk)
provides=()
conflicts=()
replaces=()
backup=()
options=()
noextract=()
md5sums=()
validpgpkeys=()
rootdir=$(pwd)

#prepare() {
#}

#build() {
#}

#check() {
#}

package_jkoonts-myq() {
    install=myq.install
    cp -a "$rootdir/config/"* "$pkgdir"
    git clone https://github.com/helloimalemur/MyQ_Java "$pkgdir/usr/share/myq/MyQ_Java"
    ###to be replaced with Gradle build
	javac -cp "$pkgdir/usr/share/myq/MyQ_Java/src/" "$pkgdir/usr/share/myq/MyQ_Java/src/Main.java"
    javac -cp "$pkgdir/usr/share/myq/MyQ_Java/src/" "$pkgdir/usr/share/myq/MyQ_Java/src/Closer.java"
    mv "$pkgdir/usr/share/myq/MyQ_Java/src/"*.class "$pkgdir/usr/share/myq/"
    ###
    rm -rf "$pkgdir/usr/share/myq/MyQ_Java/"
    chmod +x "$pkgdir/usr/share/myq/startmyq.sh"
}
